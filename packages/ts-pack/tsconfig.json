{
  "compilerOptions": {
    "baseUrl": ".",
    "noErrorTruncation": true,
    "target": "es2020",
    "module": "ES2020",
    "outDir": "dist",
    "sourceMap": false,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "lib": ["ESNext"],
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "dist/@types",
    "paths": {
      "~/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true
  }
}
